
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<style>
    .centered {
        width: 1000px;
        height: 200px;
        position: absolute;
        top: 0%;
        left: 18%;
        //margin: -25px 0 0 -25px;
    }
    p {
        color: #282727;
        position: absolute;
        top:430px;
        left:470px;
    }
    .container {
        height: 30%;      
    }
    .body-content {
        position: absolute;
        top: 50%;
        left: 30%;
    }
    .left-circle {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        background: #282727;
        position: absolute;
        top: 330px;
        left: 560px;
    }
    .right-circle {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        background: white;
        position: absolute;
        top: 320px;
        left: 590px;
    }


</style>

<body class="intro" style="background-image: linear-gradient(navy, 40%, white); height: 100vh; width: 80vw;">
<div class="container">
    <div class="loginIcon">
        <h1 class="icon">JOOLE</h1>
    </div>
</div>
    


<div class="container body-content">
    @RenderBody()

</div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>
